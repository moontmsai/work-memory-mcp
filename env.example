# Work Memory MCP Server 환경 설정

# 데이터베이스 설정
WORK_MEMORY_DIR=./work_memory
DB_FILENAME=database.sqlite
BACKUP_DIR=./.backups

# 서버 설정
LOG_LEVEL=INFO
NODE_ENV=production

# MCP 연결 설정
MCP_TIMEOUT=60000
MAX_BUFFER_SIZE=1048576
KEEP_ALIVE_TIMEOUT=120000
SOCKET_TIMEOUT=30000

